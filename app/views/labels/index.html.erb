<div class="pull-right">
  <i class="fa fa-plus-square"></i><%= link_to '添加标签', new_label_path, class: 'btn btn-blue' %>
</div>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>#</th>
      <th class="col-md-5">标签名称</th>
      <th class="col-md-2">类型编号</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
    <% @labels.each do |label| %>
    <tr>
      <td><%= label.id %></td>
      <td>
        <h5><strong><%= label.name %></strong></h5>
      </td>
      <td><%= label.category  %></td>
      <td>
        <ul class="list-inline">
          <li>
             <%= link_to "修改", edit_label_path(label.id), class: 'btn btn-blue' %>            
          </li>
          <li>
             <%= link_to "删除", label_path(label.id), method: :delete, class: 'btn btn-blue' %>            
          </li>
        </ul>
        
      </td>
    </tr>
    <% end %>
  </tbody>
</table> 
