<div class="container">
<div class="well" style="width: 90%; margin-left: auto;margin-right: auto;">
   <ul class="nav nav-tabs" role="tablist">
          <li class="active">
            <a href="#course_tab" role="tab" data-toggle="tab">课程信息</a>
          </li>
          <li>
            <a href="#outline_tab" role="tab" data-toggle="tab">课程大纲</a>
          </li>
          <li>
            <a href="#schedule_tab" role="tab" data-toggle="tab">课时信息</a>
          </li>

    </ul> 
    <div class="tab-content">
      <%=render partial: 'courses/common/course_info'%> 
  <div  class="tab-pane fade in" id="outline_tab">
  <br>
  <legend><%=@course.name%></legend>
  <%== @course.content %>
  </div>
  <div  class="tab-pane fade in" id="schedule_tab">
    <div class="container" style='width: 80%'>
    <%= "暂无课时信息" if  @course.schedules.blank?%>
    <% @course.schedules.each_with_index do |schedule, index|%>
      <legend>第<%=index+1%>次</legend>
       <table class="table table-bordered">
          <tr>
            <th>课时名称</th>
            <td><%= schedule.name %></td>
            <th>授课地点</th>
            <td><%= schedule.address %></td>
          </tr>
          <tr>
            <th>人数限制</th>
            <td><%= schedule.limit %></td>
            <th>授课时间</th>
            <td><%= schedule.datetime_from %> ~ <%= schedule.datetime_to %></td>
          </tr>
      </table>
    <% end %>
      </div>
  </div>
</div>
</div>
</div>
