<div class="well">
      <form class='form-horizontal'>
    <fieldset>
      <legend>课程信息(添加课时)</legend>
      
      <div class="form-group">
        <label for="CourseName" class="col-lg-2 control-label">标题</label>
        <div class="col-lg-10">
        <%=text_field_tag :name,  @course.name, class: 'form-control', disabled: true%>
        </div>
      </div>

      <div class="form-group">
        <label for="CourseName" class="col-lg-2 control-label">每课时价钱</label>
        <div class="col-lg-10">
        <%=text_field_tag :price,  @course.price, class: 'form-control', disabled: true%>
        </div>
      </div>


      <div class="form-group">
        <label for="CourseDescription" class="col-lg-2 control-label">费用介绍</label>
        <div class="col-lg-10">
        <%=text_area_tag :price_detail,  @course.price_detail, class: 'form-control', rows: 8, disabled: true%>
        </div>
      </div>

      <div class="form-group">
        <label for="CourseDescription" class="col-lg-2 control-label">简介</label>
        <div class="col-lg-10">
        <%=text_area_tag :description,  @course.description, class: 'form-control', rows: 8, disabled: true%>
        </div>
      </div>

      <div class="form-group">
        <label for="CourseDescription" class="col-lg-2 control-label">课程大纲</label>
        <div class="col-lg-10">
        <%=text_area_tag :content,  @course.content, class: 'form-control', rows: 8, disabled: true%>
        </div>
      </div>

      <div class="form-group">
        <label class="control-label col-lg-2">授课教师</label>  
        <div class="col-lg-10">
            <%= 'not yet' %>
        </div>
      </div>

      <div class="form-group">
          <label for="TeacherImage" class="control-label col-lg-2">课程图片</label>
          <div class="col-lg-10">
            <%= image_tag @course.image, style: "width: 140px; height: 140px;" %>
          </div>
      </div>
    </fieldset>
    </form>
<%= render partial: 'courses/schedule'%>
</div>
