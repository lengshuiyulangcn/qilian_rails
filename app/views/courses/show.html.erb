<div class="well">
   <ul class="nav nav-tabs" role="tablist">
          <li class="active">
            <a href="#course_tab" role="tab" data-toggle="tab">课程信息</a>
          </li>
          <li>
            <a href="#schedule_tab" role="tab" data-toggle="tab">课时管理</a>
          </li>
    </ul> 
    <div class="tab-content">
     <div  class="tab-pane fade active in" id="course_tab">
      <form class='form-horizontal'>
    <fieldset>
      <legend>课程信息</legend>
    <div class="container" style='width: 100%'>
     <table class="table table-bordered">
        <tr>
          <th>课程名称</th>
          <td><%= @course.name %></td>
          <th>讲师</th>
          <td><%=@course.users.map{|user| user.name}.join(' ') %>
          </td>
        </tr>
        <tr>
          <th>课程费用</th>
          <td><%= @course.price %></td>
          <th>费用简介</th>
          <td><%= @course.price_detail %></td>
        </tr>
        <tr>
          <table class="table table-bordered">
          <tr>
            <th>课程简介</th>
            <td><div style='word-wrap:break-word;'><%= @course.description %></div></td>
          </tr>
          </table>
        </tr>
    </table>
    </div>
  </div>
  <div  class="tab-pane fade in" id="schedule_tab">
    <%= react_component('ScheduleForm', {schedules: @course.schedules.to_json, course_id: @course.id}) %>
  </div>
</div>
</div>
<link rel="stylesheet" href="/assets/jquery.datetimepicker.css" />
<script type="text/javascript" src="/assets/jquery.datetimepicker.js"></script>
