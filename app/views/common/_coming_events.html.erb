<!-- recommend_widget -->
<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <h2 class="page-header">聚会活动</h2>
    </div>
  </div>
  <% events.each do |event| %>
  <div class="row">
    <div class="col-md-4">
      <%=link_to image_tag(event.image, style: "width: 80%; height: 30%"), event_detail_path(event.id) %>
    </div>
    <div class="col-md-8">
      <h3><%=link_to event.title, event_detail_path(event.id) %></h3>
      <p><%= truncate(event.description, length: 200) %></p>
      <%=link_to "了解更多", event_detail_path(event.id), class: 'btn btn-primary'%>
    </div>
  </div>
  <hr>
<% end %>
 </div>

