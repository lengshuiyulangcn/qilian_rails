  <div class="row">
    <div class="col-lg-12">
      <%= form_for user do |f| %>
        基本<hr>
        <div class="row">
          <div class="col-md-3">
            <img src="<%= avatar_url(user)%>" href="https://cn.gravatar.com/" class="img-thumbnail" style="width: 100px;height:100px"><br>
            <a href="https://cn.gravatar.com/" class="upload" target="_blank">点击修改头像</a>
          </div>
          <div class="col-md-9">
            <div class="row">
              <div class="col-md-6">
                <label>姓(Family Name)</label>
                <%=f.text_field :family_name, value: user.family_name,class: 'form-control'%>
                <%=f.hidden_field :id, value: user.id,  required: true %>
              </div>
              <div class="col-md-6">
                <label>名(Given Name)</label>
                <%=f.text_field :given_name, value: user.given_name,class: 'form-control' %>
              </div>
            </div>
            <div class="row">
              <div class="col-md-4">
                <label>性别</i></label>
                <%=f.select :gender, [["男", "男"], ["女", "女"]] %>
              </div>
              <div class="col-md-6">
                  <label>生日</label>
                  <%=f.date_select :birthday, use_month_numbers: :true, start_year: 1980, end_year: 2000 %>
              </div>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-6">
            <label>联系电话</label>
            <%=f.text_field :phone, value: user.phone, class: 'form-control',required: true  %>
          </div>
          <div class="col-md-6">
            <label>邮箱</label>
            <%=f.email_field :email, value: user.email, class: 'form-control'%>
          </div>
        </div>

        教育/工作<hr>
      <div class="row">
         <div class="col-md-6">
           <label>学校</label>
           <%=f.text_field :school, value: user.school, class: 'form-control', required: true  %>
        </div>
        <div class="col-md-6">
          <label>专业</label>
            <%=f.text_field :major, value: user.major, class: 'form-control', required: true  %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6">
          <label>工作</label>
          <%=f.text_field :job, value: user.job, class: 'form-control' %>
        </div>
      </div>

       其它<hr>
      <div class="row">
          <div class="col-md-6">
            <label class="control-label">微信号</label>
            <%=f.text_field :wechat, value: user.wechat, class: 'form-control' %>
          </div>
          <div class="col-md-6">
            <label class="control-label">Line</label>
            <%=f.text_field :line, value: user.line, class: 'form-control' %>
          </div>
        </div>
      <div class="row">
        <div class="col-md-10">
          <button type="submit" class="btn btn-warning">保存修改</button>
        </div>
      </div>
        <% end %>
    </div>
  </div>
