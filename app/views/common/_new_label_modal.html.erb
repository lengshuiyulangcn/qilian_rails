<div class="modal-dialog" role="document">
        <div class="well">
           <%= form_for Label.new, html: {class: 'form-horizontal', id: 'new_label'}, remote: true do |f|%>
            <fieldset>
              <legend>职位分类添加</legend>
              
              <div class="form-group">
                <label for="CategoryName" class="col-lg-2 control-label">名称</label>
                <div class="col-lg-10" >
                  <%=f.text_field :name, class: 'form-control category' %>
                </div>
              </div>

              <div class="form-group">
                <label for="CategorySlug" class="col-lg-2 control-label">分类</label>
                <div class="col-lg-10">
                  <%=f.select :category,{"卒業年度"=>"gradyear","カテゴリー"=>"genre", "業界"=>"industry"} %>
                </div>
              </div>

              <div class="form-group">
                <div class="col-lg-10 col-lg-offset-2">
                  <button type="submit" class="btn btn-primary">确认添加</button>
                </div>
              </div>
            </fieldset>
             <% end %>
        </div>
    </div>
