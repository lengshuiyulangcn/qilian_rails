<!-- Page Content -->
<div class="container" id="news-detail">
  <!-- Page Heading/Breadcrumbs -->
  <div class="row">
      <div class="col-lg-12">
          <h1 class="page-header">
              <%= @post.title %>
            </h1>
            breadcrumb
      </div>
  </div>
  <!-- /.row -->

  <!-- Content Row -->
  <div class="row">
    <!-- Post Content Column -->
    <div class="col-lg-8">
      <!-- Post -->
      
      <div class="row">
        <div class="col-lg-5">
          <p class="mt5 gray">
              <!-- 阅读数 -->
              <i class="fa fa-eye"></i> 233 views　　
              <!-- 发布日期 -->
              <i class="fa fa-clock-o"></i> <%= @post.created_at %>
          </p>
        </div>
        <div class="col-lg-7 mt5">
          category
          allow_admin_modify
        </div>
      </div>
      
      <!-- Post Content Markdown Editor -->
      <div class="post-content">
      <%== @post.content %>
      </div>
      <div class="clearfix">
        before_next 
      </div>
      <!-- Duoshuo Comments -->
      <%= render partial: "common/comment_widget", locals: {post: @post } %>
    </div>

    <!-- main-right sidebar -->
    <%= render partial: 'common/side_posts', locals: {categories: @post.categories }%>
    <!-- /main-right sidebar -->

  </div>
  <!-- /.Row -->

  <!-- Duoshuo Social Plugin -->
  <script type="text/javascript">
  var duoshuoQuery = {short_name:"qilian"};
  (function() {
    var ds = document.createElement('script');
    ds.type = 'text/javascript';ds.async = true;
    ds.src = (document.location.protocol == 'https:' ? 'https:' : 'http:') + '//static.duoshuo.com/embed.js';
    ds.charset = 'UTF-8';
    (document.getElementsByTagName('head')[0]
    || document.getElementsByTagName('body')[0]).appendChild(ds);
  })();
  </script>
