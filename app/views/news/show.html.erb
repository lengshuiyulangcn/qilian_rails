
<% content_for :extra_head do %>
  <link rel="stylesheet" type="text/css" href="/assets/markdown.css" media="screen">
<% end %>
<!-- Page Content -->
<div class="container" id="news-detail">
  <!-- Page Heading/Breadcrumbs -->
  <div class="row">
      <div class="col-lg-12">
          <h1 class="page-header">
              <%= @post.title %>
            </h1>
            <ol class="breadcrumb">
              <li><%=link_to "Home", root_path%></li>
              <li><%=link_to "资讯一览", news_index_path%></li>
              <li><%=@post.title%></li>
            </ol>
      </div>
  </div>
  <!-- /.row -->

  <!-- Content Row -->
  <div class="row">
    <!-- Post Content Column -->
    <div class="col-lg-8">
      <!-- Post -->
      
      <div class="row">
        <div class="col-lg-5">
          <p class="mt5 gray">
              <!-- 阅读数 -->
              <i class="fa fa-eye"></i><%= @count %> views
              <!-- 发布日期 -->
              <i class="fa fa-clock-o"></i> <%=time_ago_in_words @post.created_at %>
          </p>
        </div>
        <div class="col-lg-7 mt5">
            <% @post.categories.each do |category| %>
            <span class="label label-success">
              <i class="fa fa-tag"></i>
              <%=link_to category.name, category_path(category.id) %>
            </span>&nbsp;
          <% end %>
        </div>
      </div>
      
      <!-- Post Content Markdown Editor -->
      <div class="post-content">
      <%== @post.content %>
      </div>
      <div class="clearfix">
        before_next 
      </div>
      <!-- Duoshuo Comments -->
      <%= render partial: "common/comment_widget", locals: {post: @post } %>
    </div>

    <!-- main-right sidebar -->
    <%= render partial: 'common/side_posts', locals: {hot_posts: @hot_posts }%>
    <!-- /main-right sidebar -->

  </div>
 </div>
  <!-- /.Row -->

  <!-- Duoshuo Social Plugin -->
  <script type="text/javascript">
  var duoshuoQuery = {short_name:"qilian"};
  (function() {
    var ds = document.createElement('script');
    ds.type = 'text/javascript';ds.async = true;
    ds.src = (document.location.protocol == 'https:' ? 'https:' : 'http:') + '//static.duoshuo.com/embed.js';
    ds.charset = 'UTF-8';
    (document.getElementsByTagName('head')[0]
    || document.getElementsByTagName('body')[0]).appendChild(ds);
  })();
  </script>
