<% content_for :extra_head do %>
  <title>七联就职资讯-有态度的资讯，左右职业人生|七联就职</title>
<% end %>
<!-- Page Content -->
<div class="container" id="news-detail">
  <!-- Page Heading/Breadcrumbs -->
  <div class="row">
      <div class="col-lg-12">
          <h1 class="page-header">
              <%= @event.title %>
            </h1>
            <ol class="breadcrumb">
              <li><%=link_to "Home", root_path%></li>
              <li><%=link_to "活动一览", events_list_path%></li>
              <li><%=@event.title%></li>
            </ol>
      </div>
  </div>
  <!-- /.row -->

  <!-- Content Row -->
  <div class="row">
    <!-- Post Content Column -->
    <div class="col-lg-8">
      <!-- Post -->
      
      <div class="row">
        <div class="col-lg-5">
          <p class="mt5 gray">
              <!-- 阅读数 -->
              <i class="fa fa-user"></i>报名人数 <%=@event.users.length%>
              <!-- 发布日期 -->
              <i class="fa fa-clock-o"></i> <%=time_ago_in_words @event.created_at %>
          </p>
        </div>
      </div>
      
      <!-- Post Content Markdown Editor -->
      <div class="post-content">
      <%== @event.content %>
      </div>
      <% if Time.now < @event.timestart %>
        <%=form_tag ('/event/apply') do%>
          <%= hidden_field_tag :event_id, @event.id %>
          <%= submit_tag "立即报名", class: "btn btn-primary btn-lg btn-block " %><br>
        <% end %>
      <% end %>
  </div>
      <!-- main-right sidebar -->
      <div class="col-lg-4">
        过往的精彩活动
    </div>
    <!-- /main-right sidebar -->
  </div>
</div>

