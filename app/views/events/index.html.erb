<div class="row pull-right">
  <%= link_to "添加", new_event_path, class: 'btn btn-blue'%>
</div>

<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>#</th>
      <th class="col-md-5">活动</th>
      <th>创建时间</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
    <% @events.each do |event|%>
    <tr>
      <td><%= event.id %></td>
      <td>
        <h5>
            <%= link_to event.title,event_path(event) %>
        </h5>
      </td>
      <td><%= event.created_at %></td>
      <td>
        <ul class="list-inline">
          <li>
            <%= link_to "修改", edit_event_path(event), class: 'btn btn-blue'%>
          </li>
          <li>
            <%= link_to "删除", event_path(event.id), method: :delete, class: 'btn btn-blue'%>
          </li>
        </ul>
        
      </td>
    </tr>
  <% end %>
  </tbody>
</table> 
<!-- Pager -->
<nav>
  paginate
</nav>

