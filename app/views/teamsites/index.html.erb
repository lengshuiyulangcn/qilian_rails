<div class="row pull-right">
  <%= link_to "添加", new_teamsite_path, class: 'btn btn-blue'%>
</div>

<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th class="col-md-5">Path</th>
      <th>Description</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
    <% @teamsites.each do |teamsite|%>
    <tr>
      <td><%= teamsite.path %></td>
      <td><%= teamsite.description %></td>
      <td>
        <ul class="list-inline">
          <li>
            <%= link_to "修改", edit_teamsite_path(teamsite), class: 'btn btn-blue'%>
          </li>
          <li>
            <%= link_to "删除", teamsite_path(teamsite), method: :delete, class: 'btn btn-blue'%>
          </li>
        </ul>
        
      </td>
    </tr>
  <% end %>
  </tbody>
</table> 
