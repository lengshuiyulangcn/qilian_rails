<div class="row pull-right">
  <%= link_to "添加", new_post_path, class: 'btn btn-blue'%>
</div>

<nav>
  paginate
</nav>

<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>#</th>
      <th class="col-md-5">标题</th>
      <th>创建时间</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post|%>
    <tr>
      <td><%= post.id %></td>
      <td>
        <h5>
            <%= link_to post.title, post_path(post) %>
        </h5>
      </td>
      <td><%= post.created_at %></td>
      <td>
        <ul class="list-inline">
          <li>
            <%= link_to "修改", edit_post_path(post), class: 'btn btn-blue'%>
          </li>
          <li>
            <%= link_to "删除", destroy_post_path(post), method: 'delete', class: 'btn btn-blue'%>
          </li>
        </ul>
        
      </td>
    </tr>
  <% end %>
  </tbody>
</table> 
<!-- Pager -->
<nav>
  paginate
</nav>

