<% content_for :extra_head do %>
  <title>七联就职资讯-有态度的资讯，左右职业人生|七联就职</title>
<% end %>
<!-- Page Content -->
<div class="container" id="news-detail">
  <!-- Page Heading/Breadcrumbs -->
  <div class="row">
      <div class="col-lg-12">
        <h1 class="page-header">
          <%= @job.title %>
        </h1>
            <ol class="breadcrumb">
              <li><%=link_to "Home", root_path%></li>
              <li><%=link_to "资讯一览", job_search_path%></li>
              <li><%=@job.title%></li>
            </ol>
      </div>
  </div>
  <!-- /.row -->

  <!-- Content Row -->
  <div class="row">
    <!-- calendar Content Column -->
    <div class="col-lg-8">
      <!-- calendar -->
      
      <div class="row">
        <div class="col-lg-3">
          <p class="mt5 gray">　
              <!-- 发布日期 -->
              <i class="fa fa-clock-o"></i><%=time_ago_in_words @job.created_at %> ago
          </p>
        </div>
        <div class="col-lg-9 mt5">
          <% @job.labels.each do |label|%>
             <span class="label label-success">
              <a href="#">
                <i class="fa fa-tag"></i>
                <%=link_to  label.name, job_single_search_path(label.id) %>
              </a>
             </span>
             &nbsp;
             <% end %>
        </div>
      </div>
      
      <!-- calendar Content Markdown Editor -->
      <div class="calendar-content">
        <div class="alert alert-danger" role="alert">
          締切: <%=format_birthday(@job.expire_at)%> 
        </div>

      </div>
      
      <table class="table table-hover table-bordered table-bgd-color">
        <tr>
          <th>会社名</th>
          <td><%= @job.comp_name %></td>
        </tr>
        <tr>
          <th>会社紹介</th>
          <td><%== @job.content %></td>
        </tr>
        <tr>
          <th class="col-md-3">募集種別</th>
          <td><%= @job.position %></td>
        </tr>

        <tr>
          <th>実施内容</th>
          <td><%== @job.detail %></td>
        </tr>

        <tr>
          <th>時期・日程</th>
          <td>
            <%= @job.schedule %>
          </td>
        </tr>

        <tr>
          <th>実施場所</th>
          <td><%= @job.location %></td>
        </tr>

        <tr>
          <th>選考フロー</th>
          <td><%= @job.step %></td>
        </tr>

        <tr>
          <th>選募集人数</th>
          <td><%= @job.num %></td>
        </tr>

        <tr>
          <th>参加資格</th>
          <td><%= @job.target %></td>
        </tr>
        
        <tr>
          <th>報応募締切</th>
          <td><%= @job.exstr ? @job.exstr : format_birthday(@job.expire_at) %></td>
        </tr>

        <tr>
          <th>七联推荐指数</th>
          <td>
            <span><i class="fa fa-star"></i></span>
            <span><i class="fa fa-star"></i></span>
            <span><i class="fa fa-star"></i></span>
            <span><i class="fa fa-star"></i></span>
            <span><i class="fa fa-star"></i></span>
          </td>
        </tr>

      </table>
      
      <div class="row">
        <a class="btn btn-success btn-block"  style="border-radius:40px" href="<%= @job.source_url%>" target="_blank">点击申请</a>
      </div>
      <br>
    </div>

    <div class="col-lg-4">
    <!-- main-right sidebar -->
      <%= render partial: '/mypage/common/calendar'%>
    <!-- /main-right sidebar -->
    </div>

  </div>
  <!-- /.Row -->
  </div>
