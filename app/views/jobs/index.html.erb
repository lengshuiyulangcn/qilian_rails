<% content_for :extra_head do %>
  <title>七联就职资讯-有态度的资讯，左右职业人生|七联就职</title>
<% end %>
<div class="row pull-right">
  <%= link_to "添加", new_job_path, class: 'btn btn-blue'%>
</div>

<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>#</th>
      <th class="col-md-5">标题</th>
      <th>创建时间</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
    <% @jobs.each do |job|%>
    <tr>
      <td><%= job.id %></td>
      <td>
        <h5>
            <%= link_to job.title,job_path(job) %>
        </h5>
      </td>
      <td><%= job.created_at %></td>
      <td>
        <ul class="list-inline">
          <li>
            <%= link_to "修改", edit_job_path(job), class: 'btn btn-blue'%>
          </li>
          <li>
            <%= link_to "删除", job_path(job.id), method: :delete, class: 'btn btn-blue'%>
          </li>
        </ul>
        
      </td>
    </tr>
  <% end %>
  </tbody>
</table> 
<!-- Pager -->
<nav>
  paginate
</nav>

